<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_other"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_bg"
    tools:context="com.adrian.gomoku.activity.OtherActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/normal_font"
            android:text="@string/bg_music" />

        <com.adrian.gomoku.views.SwitchButton
            android:id="@+id/sb_bg_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_button_color="@color/base_blue"
            app:sb_shadow_color="@color/colorPrimary"
            app:sb_background="#FFF"
            app:sb_checkline_color="#a5dc88"
            app:sb_checked_color="@color/colorPrimary"
            app:sb_uncheckcircle_color="@color/colorPrimary"
            app:sb_enable_effect="true"
            app:sb_shadow_effect="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/normal_font"
            android:text="@string/piece_sound" />

        <com.adrian.gomoku.views.SwitchButton
            android:id="@+id/sb_piece_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_button_color="@color/base_blue"
            app:sb_shadow_color="@color/colorPrimary"
            app:sb_background="#FFF"
            app:sb_checkline_color="#a5dc88"
            app:sb_checked_color="@color/colorPrimary"
            app:sb_uncheckcircle_color="@color/colorPrimary"
            app:sb_enable_effect="true"
            app:sb_shadow_effect="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_gray" />

</LinearLayout>
